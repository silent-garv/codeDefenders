{
  "manifest_version": 3,
  "name": "CyberSentinel Extension",
  "version": "1.0",
  "description": "Send alerts to backend via popup",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}