{
  "manifest_version": 3,
  "name": "Cyber Sentinel - Security Monitor",
  "version": "1.0.0",
  "description": "Real-time cybersecurity monitoring and threat detection",
  "permissions": ["activeTab", "storage", "clipboardRead", "clipboardWrite", "webNavigation", "tabs", "scripting"],
  "host_permissions": ["http://localhost:5000/*", "https://code-defenders-cih-2-0-1vn9.vercel.app/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cyber Sentinel"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
